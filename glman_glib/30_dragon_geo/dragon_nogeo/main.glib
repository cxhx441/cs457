#LAVA
Vertex   lava_voronoi.vert
Fragment lava_voronoi.frag
Program  lava             \
    uNoiseAmp <0. 1.6 5.>            \
    uNoiseFreq <1 1000 1000>         \
    uNoiseOctaves <1 7 9>         \
    uTimeMultiplier <1 16.5 50> \
    uSmooth <true> \
    uAnimate <true> \
    uClouds <false> \

QuadXZ 0 500




